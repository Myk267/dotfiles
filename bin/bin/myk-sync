#!/usr/bin/env bash
# update debian with the main servers, then install programs from the $HOME/bin/init/debs file

set -e # exit if any command has non-zero return value
set -u # exit if undefined reference found
set -o pipefail # do not mask pipeline errors
#set -x # debug mode 
IFS=$'\n\t'

function myk-sync() {
	sudo apt update && sudo apt upgrade && sudo apt install $("$HOME/bin/init/init")
}
