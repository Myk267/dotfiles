#!/usr/bin/env bash
# Stow "packages" in ~/dotfiles, skipping non-directories

set -e # exit if any command has non-zero return value
set -u # exit if undefined reference found
set -o pipefail # do not mask pipeline errors
#set -x # debug mode 
IFS=$'\n\t'

pushd "$HOME/dotfiles"
for package in *; do
	if [[ -d "$package" ]]; 
	then
		stow -R "$package"
	fi
done
popd
